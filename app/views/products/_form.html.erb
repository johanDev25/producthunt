   	<div class="container">
   		<div class="row">
   			<div class="col-sm-6 offset-sm-3">
   				<h1><%= form_title %></h1>
           <% if @product.errors.any? %>
           <div class="alert alert-danger">
             <ul>
              <% @product.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
          <%= form_for @product do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "ingresa el nombre del producto" %>
          </div>
          <div class="form-group">
            <%= f.url_field :url, class: "form-control input-lg", placeholder: "ingresa la URL del producto" %>
          </div>
          <div class="form-group">
            <%= f.text_area :description, class: "form-control input-lg", placeholder: "ingresa la descripcion del producto" %>
          </div>
          <div class="form-group">
            <%= f.file_field :image %>
          </div>
          <div>
            <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>