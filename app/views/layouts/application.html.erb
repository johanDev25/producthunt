<!DOCTYPE html>
<html>
<head>
  <title>Producthunt</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "Product Hunt", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">    
          <ul class="navbar-nav ml-auto">
            <% if signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle avatar" data-toggle="dropdown">
                  <img src="<%= Gravatar.new("#{current_user.email}").image_url %>" class="img-circle" />
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Salir", logout_path, method: :delete %></li>
                </ul>
                <li><%= link_to "<span class='glyphicon glyphicon-plus'></span>".html_safe, new_product_path %></li>
              </li>
               <% else %>
               <li><%= link_to "RegÃ­strate", new_user_path %></li>
              <li><%= link_to "Login", login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  <% if flash[:notice] %>
  <div class="alert alert-info"><%= flash[:notice] %></div>
  <% end %>


  <%= yield %>
  
</body>
</html>


 

 